# API密钥配置
OPENAI_API_KEY=your_openai_api_key
TWITTER_API_KEY=your_twitter_api_key
REDDIT_API_KEY=your_reddit_api_key
NEWS_API_KEY=your_news_api_key
TELEGRAM_API_KEY=your_telegram_api_key

# OpenAI模型配置
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000
OPENAI_BASE_URL=https://api.openai.com/v1  # 可选，如果使用代理或其他API端点
OPENAI_ORG_ID=your_org_id  # 可选，如果有组织ID
OPENAI_REQUEST_TIMEOUT=30  # API请求超时时间（秒）
OPENAI_MAX_RETRIES=3  # API请求最大重试次数
OPENAI_RETRY_INTERVAL=1  # 重试间隔（秒）

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=crypto_trading
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# 交易所API配置
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/trading.log

# Telegram群组配置
TELEGRAM_GROUPS=[
    "crypto_trading_signals",
    "bitcoin_analysis",
    "crypto_news"
]

# 情绪分析配置
SENTIMENT_UPDATE_INTERVAL=300  # 5分钟
SENTIMENT_HISTORY_DAYS=7
SENTIMENT_MIN_CONFIDENCE=0.6

# 技术分析配置
TECHNICAL_INDICATORS=[
    "RSI",
    "MACD",
    "BOLLINGER_BANDS"
]
RSI_PERIOD=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
BOLLINGER_PERIOD=20
BOLLINGER_STD=2

# 市场深度配置
MARKET_DEPTH_LEVELS=5
VOLUME_RATIO_THRESHOLD=1.2

# 缓存配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password

# 代理配置（如果需要）
HTTP_PROXY=
HTTPS_PROXY=

# 应用配置
APP_ENV=development
MAX_POSITION_SIZE=1000
RISK_LIMIT_PERCENTAGE=2
STOP_LOSS_PERCENTAGE=1

# 交易配置
TRADING_PAIRS=["BTCUSDT", "ETHUSDT"]
TRADING_INTERVAL=1m
MAX_TRADES_PER_DAY=10

# 监控配置
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# 邮件通知配置
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your_email@gmail.com
SENDER_PASSWORD=your_email_password 